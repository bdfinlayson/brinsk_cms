<div class='left-sidebar'>
  <h1><u>Current Tasks</u></h1>
  <div class='bottom-right-pane'>
    <% if @working_tasks.any? %>
      <% @working_tasks.each do |task| %>
        <div class="expander">
          <a href="javascript:void(0)" class="expander-trigger expander-hidden"><%= task.name %></a>
          <div class="expander-content">
            <p><%= task.description %><p>
          </div>
        </div>
      <% end %>
    <% else %>
      <i>No current tasks</i>
    <% end %>
  </div>
  <h1><u>To Do</u></h1>
  <div class='bottom-right-pane'>
    <% if @inbox_tasks.any? %>
      <% @inbox_tasks.each do |task| %>
        <div class="expander">
          <a href="javascript:void(0)" class="expander-trigger expander-hidden"><%= task.name %></a>
          <div class="expander-content">
            <p><%= task.description %><p>
          </div>
        </div>
      <% end %>
    <% else %>
      <i>No pending tasks</i>
    <% end %>
  </div>

</div>
